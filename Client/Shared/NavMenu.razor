                    </NavLink>
                </li>

                <li class="nav-item pt-xl-3">

                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="report">
                        <span class="oi oi-book" aria-hidden="true"></span> Report
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="predict">
                        <span class="oi oi-bar-chart" aria-hidden="true"></span> Prediction
                    </NavLink>
                </li>
                <li></li>
            </Authorized>
            <NotAuthorized>
            </NotAuthorized>
        </AuthorizeView>
</ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
