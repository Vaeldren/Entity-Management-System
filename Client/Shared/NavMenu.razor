        </li>
        <li class="nav-item pt-xl-3">
        </li>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="tickets">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Tickets
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="projects">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Projects
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="employees">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Employees
